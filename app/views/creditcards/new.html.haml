= render "shared/simple-header5" 
.mypage-boxes
  %main.my-containercleanfix
    

    .credit
      %h2.credit_head クレジットカード情報入力
      = form_tag('#', method: :post, id: 'charge-form',  name: "inputForm",class: "credit_form") do
        .credit_form-content
          .credit_form-group
            %label カード番号
            %span.required-tag 必須
            = text_field_tag "number", "", class: "number", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number", class: "credit_form_input"
            %ul.credit-brand_list
              %li
                = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?376951604', height: '20', width: '49'
              %li
                = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?376951604', height: '20', width: '34'
              %li
                = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?376951604', height: '20', width: '30'
              %li
                = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?376951604', height: '20', width: '32'
              %li
                = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?376951604', height: '20', width: '21'
              %li
                = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?376951604', height: '20', width: '32'
              %li
                = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/discover.svg?376951604', height: '20', width: '32'
          %br
          .credit_form-group__mt
            %label 有効期限
            %span.required-tag 必須
            %br/
            .credit_form_select-wrap
              %select#exp_month.credit_form_select-wrap_expire{name: "exp_month", type: "text"}
                %option{value: ""} --
                %option{value: "1"}01
                %option{value: "2"}02
                %option{value: "3"}03
                %option{value: "4"}04
                %option{value: "5"}05
                %option{value: "6"}06
                %option{value: "7"}07
                %option{value: "8"}08
                %option{value: "9"}09
                %option{value: "10"}10
                %option{value: "11"}11
                %option{value: "12"}12
            %span 月
            %br/
            .credit_form_select-wrap
              %select#exp_year.credit_form_select-wrap_expire{name: "exp_year", type: "text"}
                %option{value: ""} --
                %option{value: "2019"}19
                %option{value: "2020"}20
                %option{value: "2021"}21
                %option{value: "2022"}22
                %option{value: "2023"}23
                %option{value: "2024"}24
                %option{value: "2025"}25
                %option{value: "2026"}26
                %option{value: "2027"}27
                %option{value: "2028"}28
                %option{value: "2029"}29
            %span 年
          %br
          .form-group
            %label セキュリティコード
            %span.required-tag 必須
            = text_field_tag "cvc", "", class: "credit_form_input", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc"
            .credit_form_what-code
              .credit_form_what-code_text
                %span.quiestion-tag ?
                カード裏面の番号とは？
          #card_token
          -# 購入機能実装時に実装予定
          -# = submit_tag "追加する", id: "token_submit", class:"credit_form_btn"
          =link_to dones_path, id: "token_submit", class:"credit_form_btn" do
            次に進む
.creditcards_footer
  = render "shared/simple-footer"