.footer
  .footer-top
    .footer-top-inner
      .footer-top-inner__right
        #h2 スマホでかんたんフリマアプリ
        #p 今すぐ無料ダウンロード！
        .footer-top-inner__right-icon
          -# = image_tag "/images/mercari.app.acon.png", size: "68x68", class: "footer-top-inner__right-icon-left"
          .footer-top-inner__right-app
            = link_to image_tag "appstore.png", size: "133x42", class: "footer-top-inner__right-app_icon-left", href:"https://apps.apple.com/jp/app/id667861049?l=ja"

            = link_to image_tag "google-play.png", size: "133x42", class: "footer-top-inner__right-app_icon-right", href:"https://play.google.com/store/apps/details?id=com.kouzoh.mercari&hl=ja"
      .footer-top-inner__left

  .footer-bottom
    .footer-main
      .footer-main__left
        .footer-cell.footer-cell_mercari
          %h2 メルカリについて
          %ul
            %li
              = link_to 'https://about.mercari.com/' do
                会社概要（運営会社）
            %li
              = link_to 'https://careers.mercari.com/' do
                採用情報
            %li
              = link_to 'https://about.mercari.com/press/news/' do
                プレリリース
            %li
              = link_to 'https://jp-news.mercari.com/' do
                公式ブログ
            %li
              = link_to 'https://www.mercari.com/jp/logo-guidelines/' do
                メルカリロゴ利用ガイド
            .sns-icon
              = link_to 'https://twitter.com/mercari_jp' do
                %i.fab.fa-twitter.fa-2x
              = link_to 'https://www.facebook.com/mercarijp' do
                %i.fab.fa-facebook-square.fa-2x
             
        .footer-cell.footer-cell_help
          %h2 ヘルプ＆ガイド
          %ul
            %li
              = link_to 'https://www.mercari.com/jp/help_center/' do
