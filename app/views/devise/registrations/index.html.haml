.sign-up-box
  = render "shared/simple-header"

  %main.sign-up
    %section.sign-up-container
      %h2.sign-up-container_header 新規会員登録
      .sign-up-container-main
        .sign-up-container-main-content
          =link_to signup_registration_path, class: "sign-up-container-main-content_mail" do
            %i.fas.fa-envelope.sign-up-container-main-content_mail_icon, text: "メールアドレスで登録"

            %i.fas.fa-facebook-square.sign-up-container-main-content_facebook_icon, text: "FaceBookで登録"

            %i.fas.fa-google.sign-up-container-main-content_google_icon, text: "Googleで登録"

  = render "shared/simple-footer"
