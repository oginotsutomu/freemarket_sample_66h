      = image_tag 'https://www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?2482339763',class: 'simple-header__logo'
    .simple-header__navigation
      %ol.simple-header__navigation__list
        %li.simple-header__navigation__list--item.done
